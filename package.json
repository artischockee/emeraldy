{
  "name": "emeraldy-global",
  "version": "0.1.0",
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm i && npm i --only=dev --no-shrinkwrap && npm:build",
    "client": "cd client && npm start",
    "server": "NODE_ENV=development nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm:server\" \"npm:client\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.7",
    "sqlite3": "^4.0.4"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
